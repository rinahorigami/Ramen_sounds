<div class="video-form-container">
  <h2>新しい動画を作成</h2>

  <%= form_with(model: @video, local: true, html: { class: 'custom-form' }) do |form| %>
    <div class="form-group">
      <%= form.label :title, "タイトル", class: 'video-title' %>
      <%= form.text_field :title, placeholder: "店舗名などを入力してください", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, "説明", class: 'video-description' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :file, "動画をアップロード", for: "video_file" %>
      <%= form.file_field :file, id: "video_file" %>
    </div>

    <%= form.submit '投稿する', class: 'btn btn-primary video-btn' %>
  <% end %>
</div>