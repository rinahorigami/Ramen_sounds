<div class="reel-container">
  <% if @videos.any? %>
    <% @videos.each do |video| %>
      <div class="reel-item">
        <div class="video-content">
          <div class="video-wrapper">
            <% if video.file.present? %>
              <video controls>
                <source src="<%= video.file.url %>" type="video/mp4">
                お使いのブラウザは動画の再生に対応していません。
              </video>
            <% else %>
              <span>動画がありません</span>
            <% end %>
          </div>

          <%= render 'videos/video_details', video: video %>

          <div class="video-info">
              <% if current_user == video.user %>
                <div class="video-actions">
                  <%= link_to edit_video_path(video.id), class: "edit-icon" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to video_path(video), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "delete-icon" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              <% end %>
            <% if video.ramen_shop.present? %>
              <%= link_to video.ramen_shop.name, ramen_shop_path(video.ramen_shop.id), class: "ramen-shop-name" %>
            <% end %>
              <p class="videos-menu-name">
                <% if video.menu_name.present? %>
                  <%= video.menu_name %>
                <% end %>
              </p>
              <p class="videos-menu-price">
                <% if video.price.present? %>
                  <%= video.price %>円
                <% end %>
              </p>
              <p class="videos-comment"><%= video.comment if video.comment.present? %></p>
                <div class="video-tags">
                  <% video.tags.each do |tag| %>
                    <span class="tag">#<%= tag.name %></span>
                  <% end %>
                </div>
              </div>
           </div>
          </div>
    <% end %>
  <% else %>
    <p class='no-videos-message'>投稿動画がありません</p>
  <% end %>
</div>

<script>
  document.addEventListener('turbo:load', () => {
    const videos = document.querySelectorAll('.reel-item video');
  
    videos.forEach(video => {
      video.addEventListener('play', () => {
        videos.forEach(v => {
          if (v !== video && !v.paused) {
            v.pause();
          }
        });
      });
    });
  });
</script>
