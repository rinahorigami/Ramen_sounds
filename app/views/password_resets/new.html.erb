<div class="top-page" id="background-container">
  <div class="background-image" id="background1"></div>
  <div class="background-image" id="background2"></div>
    <div class="top-page-container">
      <h2 class="login"><%= t('.title') %></h2>
        <%= form_with url: password_resets_path, method: :post do |f| %>
          <div class="mb-3">
            <%= f.label :email, t('.email'), class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <%= f.submit t('.send_email'), class: "btn-primary" %>
        <% end %>
        <div class='text-center'>
          <%= link_to t('.to_register_page'), new_user_path, class: "signup-link"%>
        </div>
        <div class='text-center'>
          <%= link_to t('.to_login_page'), login_path, class: "signup-link"%>
        </div>
    </div>
</div>