<% content_for :header_title do %>
  ユーザー管理
<% end %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>権限</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.role %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "詳細", admin_user_path(user), class: "btn btn-primary btn-sm" %>
          <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-secondary btn-sm" %>
          <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

