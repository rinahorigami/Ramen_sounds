<% content_for :header_title do %>
  ラーメン店新規登録
<% end %>

<p>店舗名と位置情報を入力して、データを更新します。</p>

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">新規登録フォーム</h3>
  </div>
  <div class="card-body">
    <%= form_with url: admin_ramen_shops_path, method: :post, class: "form-horizontal" do %>
      <div class="form-group row">
        <label for="shop_name" class="col-sm-2 col-form-label">店舗名</label>
        <div class="col-sm-10">
          <%= text_field_tag :shop_name, params[:shop_name], class: "form-control", id: "shop_name", placeholder: "例: ラーメン" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="shop_lat" class="col-sm-2 col-form-label">緯度</label>
        <div class="col-sm-10">
          <%= text_field_tag :shop_lat, params[:shop_lat], class: "form-control", id: "shop_lat", placeholder: "例: 35.6895" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="shop_lng" class="col-sm-2 col-form-label">経度</label>
        <div class="col-sm-10">
          <%= text_field_tag :shop_lng, params[:shop_lng], class: "form-control", id: "shop_lng", placeholder: "例: 139.6917" %>
        </div>
      </div>

      <div class="card-footer">
        <%= submit_tag "実行する", class: "btn btn-primary", data: { confirm: "本当に実行しますか？" } %>
      </div>
    <% end %>
  </div>
</div>


