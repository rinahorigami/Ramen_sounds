<%= javascript_import_module_tag 'top_page' %>
<%= javascript_import_module_tag 'avatar_preview' %>

<div class="top-page" id="background-container">
  <div class="background-image" id="background1"></div>
  <div class="background-image" id="background2"></div>
    <div class="top-page-container">
      <h2><%= t('.title') %></h2>
        <%= form_with url: login_path do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :remember_me, class: "form-label" %>
            <%= f.check_box :remember_me %>
          </div>
          <%= f.submit t('.login'), class: "btn-primary" %>
        <% end %>

        <div class="text-center">
          <p><%= t('.or') %></p>
        </div>

        <div class="text-center google-login-wrapper">
          <%= link_to google_login_api_oauth_path(provider: :google), class: "btn btn-primary google-login-btn" do %>
            <img src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png" alt="Google Logo" class="google-logo">
            <%= t('.google_acount_login') %>
          <% end %>
        </div>
    
        <div class='text-center'>
          <%= link_to t('.to_register_page'), new_user_path, class: "signup-link"%>
        </div>

        <div class='text-center'>
          <%= link_to t('.about-the-site'), "#{root_path}#how-to-use", class: "signup-link"%>
        </div>
    
        <div class='text-center'>
          <%= link_to t('.password_forget'), new_password_reset_path, class: "password-reset-link"%>
        </div>
    </div>
</div>
